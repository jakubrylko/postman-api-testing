		{
			"name": "Status",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Test statusu odpowiedzi\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// Przypisanie body odpowiedzi do stałej\r",
							"const response = pm.response.json();\r",
							"\r",
							"// Wyświetlenie w konsoli wartości status\r",
							"console.log(\"1st: \" + response.status);\r",
							"console.log(\"2nd: \" + response['status']);\r",
							"\r",
							"// Test wartości statusu\r",
							" pm.test(\"Status should be OK\", () => {\r",
							"    pm.expect(response.status).to.eql(\"OK\");\r",
							"});\r",
							"\r",
							"// Przejście do podanego zapytania (w kolekcji)\r",
							" postman.setNextRequest(\"List of books\");"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/status",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"status"
					]
				}
			},
			"response": []
		},
		{
			"name": "List of books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Test statusu odpowiedzi\r",
							"pm.test(\"Status code is 200\", () => {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// Przypisanie body odpowiedzi do stałej\r",
							"const respone = pm.response.json();\r",
							"\r",
							"// Przypisanie dostępnych książek do stałej\r",
							"const nonFictionBooks = respone.filter((book) => book.available === true);\r",
							"console.log(nonFictionBooks);\r",
							"\r",
							"// Przypisanie pierwszego obiektu z tablicy\r",
							"const book = nonFictionBooks[0];\r",
							"console.log(book);\r",
							"\r",
							"// Jeśli książka istnieje przypisz id do zmiennej\r",
							"if (book){\r",
							"    pm.collectionVariables.set(\"bookId\", book.id);\r",
							"}\r",
							"\r",
							"// Test atrybutów książki\r",
							"pm.test(\"Book found\", () => {\r",
							"    pm.expect(book).to.be.an('object');\r",
							"    pm.expect(book.available).to.be.true;\r",
							"    pm.expect(book.available).to.eql(true);\r",
							"    pm.expect(book.type).to.eql(\"non-fiction\");\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/books?type=non-fiction",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"books"
					],
					"query": [
						{
							"key": "type",
							"value": "non-fiction"
						},
						{
							"key": "limit",
							"value": "3",
							"disabled": true
						}
					]
				}
			},
			"response": []
		},
